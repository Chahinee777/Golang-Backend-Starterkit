{
    "swagger": "2.0",
    "info": {
        "description": "A simple authentication API built with Go and Gin",
        "title": "Asteroidea Starter Kit API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
